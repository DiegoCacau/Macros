<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent" >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/windowBackground"
    tools:context="diegocacau.macros.new_food"
    android:layout_alignParentBottom="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_below="@id/tool_bar">

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:id="@+id/firsLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:paddingTop="30dp"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="11"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="6"
                        android:paddingLeft="25dp"
                        android:text="Alimento"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/alimentoNome"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="text"
                        />

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/secondRelative"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_below="@id/firsLinear"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary"
                    android:textSize="24dp"
                    android:textColor="@color/buttonTextColor"
                    android:text="Macros"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/secondLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:layout_below="@id/secondRelative"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:text="Calorias"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/alimentoCal"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="ProteÃ­nas"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoProt"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:text="Carboidatos"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoCarb"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Gordura"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoGord"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Fibras"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoFib"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tRelative"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_below="@id/firsLinear"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="PorÃ§Ã£o"
                        android:textAlignment="center"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="24dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Tamanho"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoSize"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Unidade"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/alimentoUni"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="text"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fRelative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@id/secondLinear"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@color/colorAccent"
                        android:text="Adicionar ao banco"
                        android:textColor="@color/buttonTextColor"
                        android:layout_weight="8"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_below="@id/fRelative"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="#ffb2deda"
                        android:text="Cancelar"
                        android:textColor="@color/buttonTextColor"
                        android:layout_weight="5"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>




            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


</RelativeLayout>

