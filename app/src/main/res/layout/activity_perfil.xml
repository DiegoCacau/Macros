<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/windowBackground"
    tools:context="diegocacau.macros.Perfil"
    android:layout_alignParentBottom="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_below="@id/tool_bar">

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/firstRelative"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                >

                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textAlignment="center"
                     android:background="@color/colorPrimary"
                     android:textSize="24dp"
                     android:textColor="@color/buttonTextColor"
                     android:text="Usuário"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/firsLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:layout_below="@id/firstRelative"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="11"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="6"
                        android:paddingLeft="25dp"
                        android:text="Nome"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/textName"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="20"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="text"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Peso"
                        android:textSize="23dp"
                        android:layout_weight="6"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/textPeso"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="20"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/secondRelative"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_below="@id/firsLinear"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary"
                    android:textSize="24dp"
                    android:textColor="@color/buttonTextColor"
                    android:text="Macro Nutrientes"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/secondLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:layout_below="@id/secondRelative"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:text="Calorias"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"/>

                    <EditText
                        android:id="@+id/textCal"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="8"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Proteínas"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/textProt"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="8"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:text="Carboidatos"
                        android:textSize="23dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/textCarb"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="8"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Gordura"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/textGord"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="8"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Fibras"
                        android:textSize="23dp"
                        android:layout_weight="8"
                        android:paddingLeft="25dp"
                        android:textColor="@color/textColor"
                        />

                    <EditText
                        android:id="@+id/textFib"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/text_input_border"
                        android:layout_marginRight="20dp"
                        android:maxLength="8"
                        android:textColor="@color/textColor"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@id/secondLinear"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@color/colorAccent"
                        android:text="Salvar"
                        android:textColor="@color/buttonTextColor"
                        android:layout_weight="5"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>




            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/black"
        android:dividerHeight="0dp"
        android:background="@color/windowBackground"
        android:textColor="@color/textColor"/>

</android.support.v4.widget.DrawerLayout>

