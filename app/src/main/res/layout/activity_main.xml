<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/windowBackground"
        tools:context=".MainActivity"
        android:layout_alignParentBottom="true"
        >


        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            ></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/firstLinearLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/date_1"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:background="@drawable/border_button"
                        android:layout_gravity="center"
                        android:textColor="@color/buttonTextColor"
                        style="?android:attr/buttonBarButtonStyle"


                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/date"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_weight = "1"
                        android:background="@drawable/border_button"
                        android:textColor="@color/buttonTextColor"
                        style="?android:attr/buttonBarButtonStyle"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/date_2"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_weight = "1"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/buttonTextColor"
                        style="?android:attr/buttonBarButtonStyle"
                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/barsHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:layout_below="@id/firstLinearLayout"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="6"
                        android:paddingLeft="10dp"
                        android:text="Calorias"
                        android:textSize="18dp"
                        android:textColor="@color/textColor"/>

                    <ProgressBar
                        android:id="@+id/barCal"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:progressDrawable="@drawable/customprogressbar"
                        android:max="100"
                        android:progress="80"
                        android:minHeight="25dp"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="ProteÃ­nas"
                        android:textSize="18dp"
                        android:layout_weight="6"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor"
                        />

                    <ProgressBar
                        android:id="@+id/barProt"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:progressDrawable="@drawable/customprogressbar"
                        android:max="100"
                        android:progress="50"
                        android:minHeight="25dp"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="6"
                        android:maxLength="12"
                        android:paddingRight="0dp"
                        android:layout_alignParentRight="true"
                        android:text="Carboidratos"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor"/>

                    <ProgressBar
                        android:id="@+id/barCarb"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:progressDrawable="@drawable/customprogressbar"
                        android:max="100"
                        android:progress="90"
                        android:minHeight="25dp"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Gorduras"
                        android:textSize="18dp"
                        android:layout_weight="6"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor"
                        />

                    <ProgressBar
                        android:id="@+id/barGord"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:progressDrawable="@drawable/customprogressbar"
                        android:max="100"
                        android:progress="90"
                        android:minHeight="25dp"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:weightSum="11">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Fibras"
                        android:textSize="18dp"
                        android:layout_weight="6"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor"
                        />

                    <ProgressBar
                        android:id="@+id/barFib"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:progressDrawable="@drawable/customprogressbar"
                        android:max="100"
                        android:progress="100"
                        android:minHeight="25dp"
                        android:layout_weight="5"
                        android:paddingRight="20dp"
                        android:paddingLeft="30dp"
                        />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_below="@id/barsHome"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@color/colorAccent"
                    android:text="Adicionar RefeiÃ§Ã£o"
                    android:textColor="@color/buttonTextColor"
                    android:layout_weight="5"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/black"
        android:dividerHeight="0dp"
        android:background="@color/windowBackground"
        android:textColor="@color/textColor"/>


</android.support.v4.widget.DrawerLayout>
