<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="diegocacau.macros.Graphs"
    android:background="@color/windowBackground">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"
            />

        <ScrollView
            android:id="@+id/scrollV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:layout_below="@id/tool_bar">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/secondRelative"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:textSize="24dp"
                        android:textColor="@color/buttonTextColor"
                        android:text="Hoje"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tRelative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/secondRelative"
                    android:orientation="horizontal"
                    android:weightSum="20"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:orientation="horizontal">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/piechart"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="7">

                                <Button
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="#FF1493"
                                    android:layout_marginBottom="5dp"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/porcProt"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:text="ProteÃ­nas -  0%"
                                android:paddingTop="5dp"
                                android:textColor="@color/textColor"
                                android:layout_weight="3"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="7">

                                <Button
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="#32CD32"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/porcCarb"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:text="Carboidratos -  0%"
                                android:textColor="@color/textColor"
                                android:layout_weight="3"
                                android:paddingTop="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="7">

                                <Button
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="#1E90FF"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/porcGord"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:text="Gorduras -  0%"
                                android:textColor="@color/textColor"
                                android:layout_weight="3"
                                android:paddingTop="5dp"/>


                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tRelative"
                    android:layout_marginTop="30dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:weightSum="20">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barchart"
                            android:layout_width="fill_parent"
                            android:layout_height="300dp"
                            android:layout_weight="20"/>

                    </LinearLayout>

                </RelativeLayout>




            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>

    <!-- The navigation drawer -->
<ListView android:id="@+id/left_drawer"
android:layout_width="240dp"
android:layout_height="wrap_content"
android:layout_gravity="start"
android:choiceMode="singleChoice"
android:divider="@android:color/black"
android:dividerHeight="0dp"
android:background="@color/windowBackground"
android:textColor="@color/textColor"/>


</android.support.v4.widget.DrawerLayout>
