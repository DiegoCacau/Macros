<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#ff0088cc"
                android:centerColor="#ff0088cc"
                android:centerY="1.0"
                android:endColor="#ff0088cc"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#ffcc0300"
                    android:centerColor="#ffcc0300"
                    android:centerY="1.0"
                    android:endColor="#ffcc0300"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    </layer-list>